@model CURDOperationWithImageUploadCore5_Demo.ViewModels.SpeakerViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Speaker</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SpeakerName" class="control-label"></label>
                <input asp-for="SpeakerName" class="form-control" />
                <span asp-validation-for="SpeakerName" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SpeakingDate" class="control-label"></label>
                <input asp-for="SpeakingDate" class="form-control" />
                <span asp-validation-for="SpeakingDate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="SpeakerPicture" class="control-label"></label>
                <div class="custom-file">
                <input asp-for="SpeakerPicture" class="custom-file-input" />
                    <label class="custom-file-label" for="customFile">Choose File</label>
                </div>
                <span asp-validation-for="SpeakerPicture" class="text-danger"></span>
                <img src="~/Uploads/@Model.ExistingImage" class="img-thumbnail" height="80" width="80" asp-append-version="true" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
